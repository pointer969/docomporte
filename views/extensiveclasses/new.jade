extends ../layout/default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Administração
          li.breadcrumb-item Configurações
          li.breadcrumb-item Parâmetros
          li.breadcrumb-item.active Tipos Extensivos
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-edit
                      |  Tipos Extensivos
                    .card-body                                              
                      != messages()
                      form.form-horizontal(action='/extclasses/save', method='post')
                        .form-group
                          label.form-control-label(for='userProfile') Classe
                          .controls
                            .input-group
                              input#class.form-control(name='class',size='16', type='text')
                        .form-group
                          label.form-control-label(for='description') Descrição
                          .controls
                            .input-group
                              input#description.form-control(name='description',size='100', type='text') 
                        .form-group
                          label.form-control-label(for='userProfile') (%)
                          .controls
                            .input-group
                              input#rate.form-control(name='rate',size='16', type='text')                                                                   
                        .form-group
                          label.form-control-label(for='activedYN') Ativo?
                          .controls
                            .input-group
                              select#select.form-control-sm(name='active')
                                option(value='true') Sim
                                option(value='false') Não                                                   
                        .form-actions
                          button.btn.btn-sm.primary(type='submit') Salvar
                          span
                          a(href='/extclasses') 
                           button.btn.btn-sm.secondary(type='button') Cancelar                                                                       