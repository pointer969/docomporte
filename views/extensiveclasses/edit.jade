extends ../layout/default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Administração
          li.breadcrumb-item Configurações
          li.breadcrumb-item Parâmetros
          li.breadcrumb-item Tipos Extensivos
          li.breadcrumb-item.active Detalhes
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-edit
                      |  Tipos Extensivos - Edição
                    .card-body   
                      != messages()  
                      form.form-horizontal(action='/extclasses/update/#{extclasses.id}', method='post')
                        .form-group
                          label.form-control-label(for='class') Classe
                          .controls
                            .input-group
                              input#class.form-control(name='class',size='16', type='text', value='#{extclasses.class}')                       
                        .form-group
                          label.form-control-label(for='description') Descrição
                          .controls
                            .input-group
                              input#description.form-control(name='description',size='100', type='text', value='#{extclasses.description}') 
                        .form-group
                          label.form-control-label(for='rate') (%)
                          .controls
                            .input-group
                              input#rate.form-control(name='rate',size='16', type='text', value='#{extclasses.rate}')                                               
                        .form-group
                          label.col-md-3.form-control-label(for='activedYN') Ativo?
                          .controls
                            .col-md-9
                              select#active.form-control-sm(name='active', disabled=false)
                                option(value='true', selected=extclasses.active == true) Sim
                                option(value='false', selected=extclasses.active == false) Não
                        .form-group
                          label.form-control-label(for='createdAt') Criado em
                          .controls
                            .input-group
                              input#createdAt.form-control(size='16', type='text', readonly=true, value='#{extclasses.createdAt}')                                                                                                              
                        .form-actions
                          button.btn.btn-sm.btn-success(type='submit')
                            i.fa.fa-edit
                            |  Atualizar   
                          span     
                          a(href='/extclasses/show/#{extclasses.id}')                                           
                            button.btn.btn-sm.btn-danger(type='button')
                              i.fa.fa-ban
                              |  Cancelar                               